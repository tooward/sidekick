{
    "name": "Sidekick",
    "version": "0.1",
    "description": "Save the web",
    "manifest_version": 3,
    "background" : {
        "service_worker": "./scripts/background.js"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./scripts/content.js"]
      }
    ],
    "permissions": ["activeTab", "scripting", "storage", "identity"],
    "host_permissions": [
        "http://localhost/*"
      ]
  }